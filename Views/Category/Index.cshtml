@model List<BlogSite.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Tüm Kategoriler</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            Henüz kategori eklenmemiş.
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            @foreach (var kategori in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card border-primary shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title">@kategori.Name</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-4">
        <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">
            + Yeni Kategori Ekle
        </a>
    </div>
</div>
